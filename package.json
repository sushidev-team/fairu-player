{
  "name": "@fairu/player",
  "version": "1.2.0",
  "type": "module",
  "description": "A lightweight, modular React podcast player with TypeScript",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/player.css",
    "./embed": {
      "types": "./dist/embed.d.ts",
      "import": "./dist/embed.js",
      "require": "./dist/embed.cjs"
    },
    "./cdn": "./dist/fairu-player.iife.js",
    "./cdn-light": "./dist/fairu-player.light.iife.js",
    "./cdn-loader": "./dist/fairu-player.loader.iife.js"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "vite build --mode lib",
    "build:cdn": "npm run build:lib && npm run build:cdn-standalone && npm run build:cdn-light && npm run build:cdn-loader",
    "build:cdn-standalone": "vite build --mode cdn-standalone",
    "build:cdn-light": "vite build --mode cdn-light",
    "build:cdn-loader": "vite build --mode cdn-loader",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "hls.js": "^1.6.15",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/blocks": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@storybook/test": "^8.5.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^4.0.17"
  },
  "keywords": [
    "react",
    "podcast",
    "player",
    "audio",
    "typescript",
    "tailwind"
  ],
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/sushidev-team/fairu-player.git"
  }
}
